        }

    }

    private bool tab1 { get; set; } = true;
    private bool tab2 { get; set; }
    private bool tab3 { get; set; }
    private void TabItemClick(int tabId)
    {
        tab1 = false;
        tab2 = false;
        tab3 = false;

        switch (tabId)
        {
            case 1:
                tab1 = true;
                break;
            case 2:
                tab2 = true;
                break;
            case 3:
                tab3 = true;
                break;
        }
    }


