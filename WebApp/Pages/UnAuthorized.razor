@code {

    bool IsUserLogged = false;
    protected override Task OnInitializedAsync()
    {
        CheckIfUserLogged();

        return base.OnInitializedAsync();
    }

    private async void CheckIfUserLogged()
    {
        //user = ;
        if (await ((CustomAuthenticationStateProvider)_authStateProvider).GetLoggedInUser() is null)
        {
            IsUserLogged = false;
        }

        IsUserLogged = true;

    }


}